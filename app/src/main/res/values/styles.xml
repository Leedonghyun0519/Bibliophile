<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="fade_in_out">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance">
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>
    <style name="ShowcaseView">
        <item name="sv_backgroundColor">@color/purple_500</item>
    </style>

</resources>